<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="booksTable"
        messagesPack="com.company.library.web.book">
    <data readOnly="true">
        <collection id="booksDc"
                    class="com.company.library.entity.Book"
                    view="book.browse">
            <loader id="booksDl">
                <query>
                    <![CDATA[select e from library$Book e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="booksTable"
            spacing="true">
        <filter id="filter"
                applyTo="booksTable"
                dataLoader="booksDl"
                textMaxResults="true">
            <properties include=".*"/>
        </filter>
        <groupTable id="booksTable"
                    width="100%"
                    dataContainer="booksDc"
                    presentations="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="literatureType"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="booksTable.create"/>
                <button id="editBtn" action="booksTable.edit"/>
                <button id="removeBtn" action="booksTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>